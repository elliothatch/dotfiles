[user]
	name = Elliot Hatch
	email = elliot.hatch@gmail.com
[alias]
	st = status -s -b
	lg = log --oneline

[push]
	default = simple
[diff]
	tool = gvimdiff
[difftool "gvimdiff"]
	cmd = nyaovim -f -d "$LOCAL" "$REMOTE"
[merge]
	conflictstyle = diff3
	tool = gvimdiff
[mergetool "gvimdiff"]
	cmd = nyaovim -f -d -c \"wincmd J\" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
