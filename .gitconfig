[user]
	name = Elliot Hatch
	email = elliot.hatch@gmail.com
[alias]
	st = status -s -b
	lg = log --oneline

[push]
	default = simple
[diff]
	tool = nyaovim
[difftool "nyaovim"]
	cmd = nyaovim -f -d "$LOCAL" "$REMOTE"
[merge]
	conflictstyle = diff3
	tool = nyaovim
[mergetool "nyaovim"]
	cmd = nyaovim -f -d -c \"wincmd J\" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
[core]
	editor = nvim
